{
  "name": "code-annotator",
  "version": "0.0.15",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:demo": "vite build",
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --tsconfig tsconfig.app.json",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.0.2",
    "markdown-to-jsx": "^7.7.4",
    "prismjs": "^1.30.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tsup": "^8.5.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./index.d.ts"
    },
    "./dist/index.css": {
      "default": "./dist/index.css"
    }
  },
  "files": [
    "dist",
    "index.d.ts",
    "src/components/CodeHighlighter.css"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
